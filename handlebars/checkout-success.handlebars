<!DOCTYPE html>
<html lang="en">

{{>head font="link" title="Solario"}}

<body class="-solario">
	<!-- main -->
	<main class="main">

		{{>header solario=true page="Solario" login=true burger=burger.buyer}}

		{{>sidebar page=navigation.solario}}

		<!-- cart/checkout -->
		<section class="cart">
			<div class="cart-wrap container-xl">
				<div class="cart-box -result">

					<!-- thank you -->
					<div class="checkout-result">
						<div class="checkout-icon -success">
							<span><i class="fa fa-check" aria-hidden="true"></i></span>
						</div>
						<h1 class="checkout-title">Thank you for your order.</h1>
						<div class="checkout-message">
							Your order has been placed successfully.<br>
							Order Number is: <strong>30124564332</strong><br>
							Your time limit to make a tranfer in:
						</div>
						<div class="checkout-timer">
							<span id="countdown" data-date="12/01/2020 01:00:00"></span>
						</div>
						<div class="checkout-notes">
							<p><i class="fa fa-file-text-o" aria-hidden="true"></i> Invoice has been sent to your registered email id, after order is dispatched.</p>
							<p><i class="fa fa-envelope-o" aria-hidden="true"></i> You will received tracking details on your registered email id, after order is dispatched.</p>
						</div>
					</div>
					
					<!-- cart button -->
					<div class="cart-footer">
						<a href="solario.html" role="link" class="button -secondary cart-button-action">Continue Shopping <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
					</div>

				</div>
			</div>
		</section>

		{{>modal-all}}

		{{>footer}}

	</main>

{{>js}}
	<script>
	// example for timer, change data-date attribute with those format date
    let ambilDate = document.getElementById('countdown');
    if(!!ambilDate) {
        let gDate = ambilDate.getAttribute('data-date');
        let vDate = new Date(gDate).getTime();
        if(isNaN(vDate)) {
            console.log('Invalid format date')
        } else {
            let xyz = setInterval(function(){
                let now = new Date().getTime();
                let selisih = vDate - now;
                let days = Math.floor(selisih / (1000 * 60 * 60 * 24));
                let hours = Math.floor((selisih % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                let minutes = Math.floor((selisih % (1000 * 60 * 60)) / (1000 * 60));
                let seconds = Math.floor((selisih % (1000 * 60)) / 1000);

				ambilDate.innerHTML = days + " <i>days</i> : " + pad(hours) + " <i>hours</i> : " + pad(minutes) + " <i>minutes</i>";

                if (selisih < 0) {
                    clearInterval(xyz);
                    ambilDate.innerHTML = "0 days : 00 hours : 00 minutes";
                }

            }, 1000);
            //console.log(vDate);
        }
    }
	function pad(val) {
		return val > 9 ? val : "0" + val;
	}
</script>
</body>
</html>
