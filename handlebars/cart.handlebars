<!DOCTYPE html>
<html lang="en">

{{>head font="link" title="Solario"}}

<body class="-solario">
	<!-- main -->
	<main class="main">

		{{>header solario=true page="Solario" login=true burger=burger.buyer}}

		{{>sidebar page=navigation.solario}}

		<!-- cart/checkout -->
		<section class="cart">
			<div class="cart-wrap container-xl">
				<h2 class="title">Shopping Cart</h2>
				<div class="cart-box">
					<div class="cart-list">

						{{>cart-list list=true cartHeader=true}}

					</div>

					<!-- cart button -->
					<div class="cart-footer">
						<a href="solario.html" role="link" class="button -fourth cart-button-action"><i class="fa fa-long-arrow-left" aria-hidden="true"></i> Continue Shopping</a>
						<a href="checkout.html" role="link" class="button -secondary cart-button-action">Checkout <i class="fa fa-long-arrow-right" aria-hidden="true"></i></a>
					</div>

				</div>
			</div>
		</section>

		{{>modal-all}}

		{{>footer}}

	</main>

{{>js}}
</body>
</html>
