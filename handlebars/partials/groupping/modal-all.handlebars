<!-- modal dialog box template -->
<div class="modal fade" id="modal-dialog" tabindex="-1" aria-labelledby="DialogBox" aria-hidden="true">
	<div class="modal-dialog modal-sm modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Delete</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="panel">
					<div class="panel-body">
						<div class="form-row">
							<div class="panel-text text-center">
								<p>Are yo sure want to delete?</p>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button type="button" class="button" data-dismiss="modal">Cancel</button>
				<button type="button" class="button -warning">Delete</button>
			</div>
		</div>
	</div>
</div>

<!-- alert add to wishlist -->
<div class="toast toast-wishlist -fixed" role="alert" aria-live="assertive" aria-atomic="true" data-delay="2000">
    <button type="button" class="close" data-dismiss="toast" aria-label="Close">
		<span aria-hidden="true">&times;</span>
    </button>
	<div class="toast-body">
		Added to wishlist.
	</div>
</div>

<!-- alert add to cart -->
<div class="toast toast-cart -fixed" role="alert" aria-live="assertive" aria-atomic="true" data-delay="6000">
    <button type="button" class="close" data-dismiss="toast" aria-label="Close">
		<span aria-hidden="true">&times;</span>
    </button>
	<div class="toast-body">
		Added to cart. Check your <a href="cart.html">shopping bag</a> now.
	</div>
</div>
