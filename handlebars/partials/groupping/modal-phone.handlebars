<!-- modal edit phone -->
<div class="modal fade" id="modal-phone-set" tabindex="-1" aria-labelledby="editPhone" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Edit Phone</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="user-block">
					<form action="#">
						{{>input type="text" label="Phone Number" name="user-phone" txtVal="089876654321"}}
						<div class="form-row">
							<div class="panel-text">
								<p>You must check your  SMS to verified the cofirmation code.</p>
							</div>
						</div>
						{{>button type="submit" label="Save" name="user-phone-save" class="-primary"}}
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
