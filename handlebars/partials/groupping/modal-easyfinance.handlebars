<!-- modal easyfinance -->
<div class="modal fade" id="modal-easyfinance" tabindex="-1" aria-labelledby="easyFinance" aria-hidden="true">
	<div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Easy Finance</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<form action="#">
				<div class="accordion easy" id="accordion-easyfinance">
					<!-- step 0 -->
					<div class="easy-card">
						<div class="easy-row row">
							<div class="easy-col col-md-6">
								{{>select nolabel="true" type="select" name="easy-bank" option="Bank Kalimantan,Bank Sulawesi,Bank Bali" placeholder="-" selected="Bank Kalimantan"}}
								<div class="easy-invoice">Invoice : SKU 8783/89879/900-890</div>
							</div>
							<div class="easy-col col-md-6">
								<div class="easy-top-row">
									<div class="easy-label">Total Price:</div>
									<div class="easy-right">
										<div class="easy-price">Rp 189.000.000</div>
									</div>
								</div>
								<div class="easy-top-row">
									<div class="easy-label">Installment:</div>
									<div class="easy-right">
										{{>quantity type="number" txtVal="2"}}
									</div>
								</div>
								<div class="easy-top-row">
									<div class="easy-label">Total:</div>
									<div class="easy-right">
										<div class="easy-price"><span>Rp 189.000.000</span></div>
									</div>
								</div>
							</div>
							<div class="easy-col col-md-12">
								<div class="easy-note">To speed up the installment process, please fill out the following form:</div>
							</div>
						</div>
					</div>

					<!-- step 1 -->
					<div class="easy-card">
						<div class="easy-header" id="easy-step1">
							<button class="button -fifth easy-button-toggle" type="button" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
								STEP 1 - Name and Address
								<i class="fa fa-caret-down" aria-hidden="true"></i>
							</button>
						</div>
						<div id="collapseOne" class="collapse show" aria-labelledby="easy-step1" data-parent="#accordion-easyfinance">
							<div class="easy-body">
								<div class="easy-row row">
									<div class="col-md-4">
										{{>select nolabel="true" type="select" name="easy-mr" option="Mr,Ms" placeholder="-" selected="Mr"}}
									</div>
									<div class="col-md-8">
										{{>input type="text" placeholder="Nama Lengkap Sesuai KTP" name="easy-name"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-8">
										{{>input type="text" placeholder="Alamat" name="easy-street"}}
									</div>
									<div class="col-md-2">
										{{>input type="text" placeholder="RT" name="easy-rt"}}
									</div>
									<div class="col-md-2">
										{{>input type="text" placeholder="RW" name="easy-rw"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-6">
										{{>input type="text" placeholder="Kecamatan" name="easy-kecamatan"}}
									</div>
									<div class="col-md-6">
										{{>input type="text" placeholder="Kelurahan" name="easy-kelurahan"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-4">
										{{>select nolabel="true" type="select" name="easy-prov" option="Aceh,Sumatera Utara,DKI Jakarta" placeholder="Provinsi"}}
									</div>
									<div class="col-md-4">
										{{>input type="text" placeholder="Kode Pos" name="easy-zipcode"}}
									</div>
									<div class="col-md-4">
										{{>input type="text" placeholder="Telepon" name="easy-phone"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-12">
										{{>checkbox type="checkbox" label="Sync data with profile" name="easy-sync"}}
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- step 2 -->
					<div class="easy-card">
						<div class="easy-header" id="headingTwo">
							<button class="button -fifth easy-button-toggle collapsed" type="button" data-toggle="collapse" data-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
								STEP 2 - Personal Data
								<i class="fa fa-caret-down" aria-hidden="true"></i>
							</button>
						</div>
						<div id="collapseTwo" class="collapse" aria-labelledby="headingTwo" data-parent="#accordion-easyfinance">
							<div class="easy-body">
								<div class="easy-row row">
									<div class="col-md-3">
										{{>select nolabel="true" type="select" name="easy-gender" option="Male,Female" placeholder="Gender"}}
									</div>
									<div class="col-md-4">
										{{>input type="text" placeholder="Tempat Lahir" name="easy-place"}}
									</div>
									<div class="col-md-5">
										{{>input type="text" placeholder="(DD/MM/YYY)" name="easy-date" override="easy-datepicker"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-3">
										{{>select nolabel="true" type="select" name="easy-idcard" option="KTP,SIM" selected="KTP"}}
									</div>
									<div class="col-md-4">
										{{>input type="text" placeholder="ID Number" name="easy-idno"}}
									</div>
									<div class="col-md-5">
										{{>input type="text" placeholder="Masa Berlaku" name="easy-masa"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-6">
										{{>input type="text" placeholder="NPWP" name="easy-npwp"}}
									</div>
									<div class="col-md-6">
										{{>select nolabel="true" type="select" name="easy-penduduk" option="KTP,SIM" placeholder="Jenis Penduduk"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-3">
										{{>select nolabel="true" type="select" name="easy-status" option="Single,Menikah" placeholder="Status"}}
									</div>
									<div class="col-md-4">
										{{>input type="text" placeholder="Agama" name="easy-agama"}}
									</div>
									<div class="col-md-5">
										{{>input type="text" placeholder="Status Tempat Tinggal" name="easy-domisili"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-4">
										{{>input type="text" placeholder="Tipe Rumah" name="easy-tiperumah"}}
									</div>
									<div class="col-md-4">
										{{>input type="text" placeholder="Pendidikan Terakhir" name="easy-edu"}}
									</div>
									<div class="col-md-4">
										{{>input type="text" placeholder="Nama Ibu Kandung" name="easy-mother"}}
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- step 3 -->
					<div class="easy-card">
						<div class="easy-header" id="headingThree">
							<button class="button -fifth easy-button-toggle collapsed" type="button" data-toggle="collapse" data-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
								STEP 3 - Work Information
								<i class="fa fa-caret-down" aria-hidden="true"></i>
							</button>
						</div>
						<div id="collapseThree" class="collapse" aria-labelledby="headingThree" data-parent="#accordion-easyfinance">
							<div class="easy-body">
								<div class="easy-row row">
									<div class="col-md-6">
										{{>input type="text" placeholder="NIK" name="easy-nik"}}
									</div>
									<div class="col-md-6">
										{{>input type="text" placeholder="Salary/month" name="easy-salary" txterror="Wajib diisi" txthint="Wajib diisi"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-6">
										{{>input type="text" placeholder="Nomor Rekening" name="easy-norek"}}
									</div>
									<div class="col-md-6">
										{{>select nolabel="true" type="select" name="easy-cabang" option="BCA,BNI" placeholder="Cabang Terdekat"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-6">
										{{>select nolabel="true" type="select" name="easy-nasabah" option="Korporat,Prioritas" placeholder="Tipe Nasabah"}}
									</div>
									<div class="col-md-6">
										{{>select nolabel="true" type="select" name="easy-jenisjob" option="Wirasasta,Karyawan" placeholder="Jenis Pekerjaan"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-6">
										{{>select nolabel="true" type="select" name="easy-bidang" option="Korporat,Prioritas" placeholder="Bidang Usaha"}}
									</div>
									<div class="col-md-6">
										{{>input type="text" placeholder="Badan Usaha" name="easy-badan"}}
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- step 4 -->
					<div class="easy-card">
						<div class="easy-header" id="headingFour">
							<button class="button -fifth easy-button-toggle collapsed" type="button" data-toggle="collapse" data-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
								STEP 4 - Photos Upload
								<i class="fa fa-caret-down" aria-hidden="true"></i>
							</button>
						</div>
						<div id="collapseFour" class="collapse" aria-labelledby="headingFour" data-parent="#accordion-easyfinance">
							<div class="easy-body">
								<div class="easy-row row">
									<div class="col-md-4">
										{{>fileupload name="easy-ktpimg" label="e-KTP" img="./asset/images/dummy/img_s_idcard.png" active="true"}}
									</div>
									<div class="col-md-4">
										{{>fileupload name="easy-npwpimg" label="NPWP"}}
									</div>
									<div class="col-md-4">
										{{>fileupload name="easy-idcardimg" label="ID Card"}}
									</div>
								</div>
								<div class="easy-row row">
									<div class="col-md-4">
										{{>fileupload name="easy-slip" label="Slip Gaji"}}
									</div>
									<div class="col-md-4">
										{{>fileupload name="easy-foto" label="Foto" txterror="Wajib diisi" txthint="Wajib diisi"}}
									</div>
								</div>
							</div>
						</div>
					</div>

					<!-- button -->
					<div class="easy-footer">
						{{>button type="submit" label="Apply" name="easy-send" class="-secondary easy-button-apply" disabled="true"}}
					</div>
				</div>
				</form>
			</div>
		</div>
	</div>
</div>
