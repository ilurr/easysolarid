<!-- modal edit password -->
<div class="modal fade" id="modal-password-set" tabindex="-1" aria-labelledby="editPassword" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Edit Password</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				<div class="user-block">
					<form action="#">
						{{>input type="password" label="Old Password" name="user-oldpass"}}
						{{>input type="password" label="New Password" name="user-newpass"}}
						{{>input type="password" label="Confirm Password" name="user-conpass"}}
						{{>button type="submit" label="Save" name="user-pass-save" class="-primary"}}
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
